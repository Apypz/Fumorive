# ERGODRIVE Backend - Environment Variables
# Copy this file to .env and update with your values
# NEVER commit .env to git!

# ============================================
# APPLICATION
# ============================================
APP_NAME=Fumorive Backend
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
RELOAD=true

# ============================================
# DATABASE - PostgreSQL + TimescaleDB
# ============================================
# Local development (default)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fumorive
DATABASE_URL_ASYNC=postgresql+asyncpg://postgres:postgres@localhost:5432/fumorive

# Production example (update with your credentials)
# DATABASE_URL=postgresql://username:password@db-server:5432/ergodrive
# DATABASE_URL_ASYNC=postgresql+asyncpg://username:password@db-server:5432/ergodrive

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# SECURITY
# ============================================
# IMPORTANT: Generate a new secret key for production!
# Use: openssl rand -hex 32
SECRET_KEY=09d25e094faa6ca2556c818166b7a9563b93f7099f6f0f4caa6cf63b88e8d3e7
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# CORS ORIGINS
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ============================================
# TIMESCALEDB
# ============================================
TIMESCALE_CHUNK_INTERVAL=1 day

# ============================================
# WEBSOCKET
# ============================================
WEBSOCKET_HEARTBEAT_INTERVAL=30

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
